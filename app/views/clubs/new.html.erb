<div class="club-edit-card">
  <h2>Fill Club Info</h2>
  <%= simple_form_for @club, html: { class: "club-edit-form", multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :name, "Club Name" %>
      <%= f.input_field :name, placeholder: "Enter club name", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Club Description" %>
      <%= f.text_area :description, rows: 4, placeholder: "Write a brief description of your club
      that will appear in your public profile", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :logo, "Club Logo" %>
      <%= f.file_field :logo, accept: "image/*", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :header_img, "Background Image for club profile, horitzontal" %>
      <%= f.file_field :header_img, accept: "image/*", required: true %>
    </div>

    <div class="card-footer">
      <div class="form-actions">
        <%= f.submit "Create Club", class: "btn-yellow" %>
      </div>
    </div>
  <% end %>
</div>
