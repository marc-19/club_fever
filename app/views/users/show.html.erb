<div class="profile-section">
  <div class="profile-card">
  <h2>Your Profile</h2>
    <% if @user.avatar.attached? %>
      <img src="<%= url_for(@user.avatar) %>" alt="<%= @user.first_name %>'s Avatar" class="profile-avatar" />
    <% else %>
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ2BbQk-mYW4VgUkiL_vuEOWXtVBFyRNPcvCQ&s" alt="Default Avatar" class="profile-avatar" />
    <% end %>

    <h3 class="profile-username"><%= @user.first_name %></h3>

    <p class="profile-details">10 quinielas played</p>

    <button class="btn-yellow">Edit Profile</button>
  </div>
</div>

<div class = club-edit-card>
  <h2>Clubs you follow</h2>
    <div class="card-footer">
      <p> Display clubs logos followed here</p>
      <br>
      <p> Search for new club to follow:</p>
      <div class="search-bar-clubs">
        <%= simple_form_for :search, url: clubs_path, method: :get do |f| %>
          <%= f.input :search, placeholder: "Search for your club...", label: false %>
        <% end %>
      </div>
    </div>
</div>

