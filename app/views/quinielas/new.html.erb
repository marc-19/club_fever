<div class="create-title">
  <h3>Create a New Quiniela</h3>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="top-container">
  <%= form_with(model: [@club, @quiniela], local: true) do |form| %>
    <div class="quiniela-title">
      <%= form.label :title, "Quiniela Title" %>
      <%= form.text_field :title, placeholder: "max. 20 characters" %>
    </div>

    <div class="reward-input">
      <%= form.label :reward, "Reward" %>
      <%= form.text_field :reward, placeholder: "Enter the reward for the quiniela" %>
    </div>

    <div class="start-date">
      <%= form.label :start_date, "Start Date" %>
      <%= form.date_field :start_date %>
    </div>

    <div class="end-date">
      <%= form.label :end_date, "End Date" %>
      <%= form.date_field :end_date %>
    </div>
</div>

<div class="matches-container">
  <h3>Matches</h3>
  <table>
    <thead>
      <tr>
        <th>Match #</th>
        <th>Local Team</th>
        <th>Visitor Team</th>
      </tr>
    </thead>
    <tbody>
      <% 10.times do |i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td>
            <%= form.text_field :local_teams, name: "quiniela[local_teams][]", placeholder: "Local team" %>
          </td>
          <td>
            <%= form.text_field :visitor_teams, name: "quiniela[visitor_teams][]", placeholder: "Visitor team" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="create-button">
  <%= form.submit "Create Quiniela" %>
</div>
<% end %>

<div class="back-button">
  <%= link_to "Back to Club", club_path(@club), class: "btn btn-secondary" %>
</div>
